@model IEnumerable<Forest.Data.Models.Domain.Music>

@{
    ViewData["Title"] = "Musics";
}

<h1>Musics</h1>

<p>
    <a asp-action="Create"  asp-controller="MusicAdmin">Create New </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tracks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateReleased)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tracks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateReleased)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Image)*@
                    @{
                        string imagePath = "/Images/Music/" + item.Image;
                    }
                    <img src="@imagePath" alt="No Image" width="30" height="30" />
            </td>
            <td>
                   <a asp-action="Edit" asp-controller="MusicAdmin" asp-route-id="@item.Id" style="text-decoration: none;">
                    <img src="/Images/Action/edit.png" alt="Edit" width="20" height="20"/>
                   </a> |
                   <a asp-action="GetMusic" asp-controller="Music" asp-route-id="@item.Id" style="text-decoration: none;">
                    <img src="/Images/Action/details.jpg" alt="Details" width="20" height="20" />
                   </a> |
                   <a asp-action="Delete" asp-controller="MusicAdmin" asp-route-id="@item.Id" style="text-decoration: none;">
                    <img src="/Images/Action/delete.jpg" alt="Delete" width="20" height="20" />
                   </a> |
                    <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.Id" style="text-decoration: none;">
                        <img src="/Images/Action/cart.jpg" alt="Cart" width="20" height="20" />
                    </a>
                 
            </td>
        </tr>
}
    </tbody>
</table>
